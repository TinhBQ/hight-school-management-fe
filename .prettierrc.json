{
    "arrowParens": "always",
    "trailingComma": "es5",
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "useTabs": false,
    "htmlWhitespaceSensitivity": "ignore",
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 80,
    "jsxSingleQuote": false,
    "singleAttributePerLine": true,
    "maxAttributesPerLine": 1,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "angular"
            }
        }
    ]
}
